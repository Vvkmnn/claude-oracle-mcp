{
  "name": "claude-oracle-mcp",
  "version": "0.1.0",
  "description": "MCP server for discovering Claude Code skills, plugins, and MCP servers from multiple sources",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "claude-oracle-mcp": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "watch": "tsc --watch",
    "dev": "bun run src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "test": "node dist/index.js --help && npm run type-check",
    "prepublishOnly": "npm run build && npm run lint && npm run format:check",
    "prepare": "husky || true"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "anthropic",
    "llm",
    "skills",
    "plugins",
    "discovery",
    "agent-skills",
    "mcp-server",
    "developer-tools",
    "npx",
    "zero-install"
  ],
  "author": "Vvkmnn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vvkmnn/claude-oracle-mcp.git"
  },
  "homepage": "https://github.com/vvkmnn/claude-oracle-mcp#readme",
  "bugs": {
    "url": "https://github.com/vvkmnn/claude-oracle-mcp/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/vvkmnn"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "fast-xml-parser": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0"
  }
}
